<RelativeLayout
    android:id="@+id/article_row_layout" 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="#E6E6E6"
    style="?android:attr/textAppearanceLarge"
	tools:context=".ArticleListFragment">

	<TextView
	    android:id="@+id/article_title_text"
	    style="?android:attr/textAppearanceLarge"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:paddingLeft="15dip"
	    android:paddingRight="8dip"
	    android:paddingTop="5dip"
	    android:textColor="#383838"
	    android:textSize="16sp" />

	<TextView
	    android:id="@+id/article_listing_smallprint"
	    style="?android:attr/textAppearanceLarge"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@id/article_title_text"
	    android:paddingBottom="3dip"
	    android:paddingLeft="15dip"
	    android:paddingRight="8dip"
	    android:paddingTop="3dp"
	    android:textColor="#A8A8A8"
	    android:textSize="16sp"
	    android:textStyle="italic" />

	<TextView
	    android:id="@+id/article_listing_tag"
	    style="?android:attr/textAppearanceLarge"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@id/article_listing_smallprint"
	    android:paddingBottom="15dip"
	    android:paddingLeft="15dip"
	    android:paddingRight="8dip"
	    android:paddingTop="3dp"
	    android:textColor="#A8A8A8"
	    android:textSize="16sp"
	    android:textStyle="italic" />
		<TextView
	    android:id="@+id/article_listing_total"
	    style="?android:attr/textAppearanceLarge"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	  	 android:layout_below="@id/article_listing_smallprint"
	    android:paddingBottom="3dip"
	    android:paddingLeft="15dip"
	    android:paddingRight="8dip"
	    android:paddingTop="3dp"
	    android:textColor="#A8A8A8"
	    android:textSize="16sp"
	    android:textStyle="italic" />

</RelativeLayout>